<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
      <children>
        <VBox spacing="12" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>

                <Label text="Monitoring Data Sensor"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <HBox spacing="10">
                    <children>
                        <Label text="Suhu:" />
                        <TextField fx:id="suhuField" promptText="°C" prefWidth="100"/>
                        <Label text="Kelembapan:" />
                        <TextField fx:id="kelembapanField" promptText="%" prefWidth="100"/>
                        <Label text="Gas:" />
                        <TextField fx:id="gasField" promptText="ppm" prefWidth="100"/>
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Button text="Tambah" onAction="#handleAdd" />
                        <Button text="Hapus" onAction="#handleDelete" />
                        <Button text="Bersihkan" onAction="#handleClear" />
                    </children>
                </HBox>

                <TableView fx:id="tableView" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="waktuCol" text="Waktu" prefWidth="180"/>
                        <TableColumn fx:id="suhuCol" text="Suhu (°C)" prefWidth="120"/>
                        <TableColumn fx:id="kelembapanCol" text="Kelembapan (%)" prefWidth="120"/>
                        <TableColumn fx:id="gasCol" text="Gas (ppm)" prefWidth="120"/>
                    </columns>
                </TableView>

            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </VBox>
    </children>
</AnchorPane>
